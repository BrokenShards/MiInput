<?xml version="1.0" encoding="utf-8"?>
<action_set>
	<action name="horizontal">		
		<axis device="joystick"
			  value="0"
			  invert="false"/>
		
		<button device="keyboard"
				positive="d"
				negative="a"
		        invert="false"/>
		
		<button device="keyboard"
				positive="right"
		        negative="left"
				invert="false"/>
	</action>

	<action name="vertical">
		<axis device="joystick"
			  value="1" 
			  invert="false"/>
		
		<button device="keyboard"
				positive="w"
				negative="s"
		        invert="false"/>
		
		<button device="keyboard"
				positive="up"
				negative="down"
		        invert="false"/>
	</action>

	<action name="submit">
		<button device="keyboard"
				positive="space"
				negative="backspace"
		        invert="false"/>
		
		<button device="keyboard"
				positive="enter"
				negative="escape"
		        invert="false"/>

		<button device="joystick"
				positive="0"
				negative="1"
		        invert="false"/>		
	</action>	
</action_set>
